{
  "$id": "commerce-cloud-urls",
  "$schema": "http://json-schema.org/draft-07/schema",
  "default": {},
  "description": "Commerce cloud (store) environment service urls",
  "required": [
    "authService",
    "crmService",
    "configurationService",
    "operationService",
    "cloudStoreService",
    "graphQlService"
  ],
  "title": "Commerce Cloud environment service urls",
  "type": "object",
  "properties": {
    "authService": {
      "$id": "#/properties/auth",
      "type": "object",
      "properties": {
        "baseUrls": {
          "$id": "#/properties/auth/urls",
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri",
            "default": "http://qubox.local:8084"
          },
          "title": "Base URLs",
          "description": "List of base URLs ordered by priority."
        }
      },
      "required": [
        "baseUrls"
      ],
      "title": "Auth API",
      "description": "Auth API settings"
    },
    "crmService": {
      "$id": "#/properties/crm/urls",
      "type": "object",
      "properties": {
        "baseUrls": {
          "$id": "#/properties/crm/urls",
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri",
            "default": "http://qubox.local:8084"
          },
          "title": "Base URLs",
          "description": "List of base URLs ordered by priority."
        }
      },
      "required": [
        "baseUrls"
      ],
      "title": "CRM API",
      "description": "CRM API settings."
    },
    "configurationService": {
      "$id": "#/properties/configuration/urls",
      "type": "object",
      "properties": {
        "baseUrls": {
          "$id": "#/properties/configuration/urls",
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri",
            "default": "http://qubox.local:8084"
          },
          "title": "Base URLs",
          "description": "List of base URLs ordered by priority."
        }
      },
      "required": [
        "baseUrls"
      ],
      "title": "Configuration API",
      "description": "Configuration API settings"
    },
    "operationService": {
      "$id": "#/properties/operation/urls",
      "type": "object",
      "properties": {
        "baseUrls": {
          "$id": "#/properties/operation/urls",
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri",
            "default": "http://qubox.local:8084"
          },
          "title": "Base URLs",
          "description": "List of base URLs ordered by priority."
        }
      },
      "required": [
        "baseUrls"
      ],
      "title": "Operation API URLs",
      "description": "Operation API list of base URLs ordered by priority."
    },
    "cloudStoreService": {
      "$id": "#/properties/store/urls",
      "type": "object",
      "properties": {
        "baseUrls": {
          "$id": "#/properties/store/urls",
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri",
            "default": "http://qubox.local:8084"
          },
          "title": "Base URLs",
          "description": "List of base URLs ordered by priority."
        }
      },
      "required": [
        "baseUrls"
      ],
      "title": "Store API URLs",
      "description": "Store API list of base URLs ordered by priority."
    },
    "graphQlService": {
      "$id": "#/properties/graphql/urls",
      "type": "object",
      "properties": {
        "baseUrls": {
          "$id": "#/properties/graphql/urls",
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri",
            "default": "http://qubox.local:8084"
          },
          "title": "Base URLs",
          "description": "List of base URLs ordered by priority."
        }
      },
      "required": [
        "baseUrls"
      ],
      "title": "GraphQL API URLs",
      "description": "GraphQL API list of base URLs ordered by priority."
    },
    "includeCloudUrls ": {
      "$id": "#/properties/includeCloudUrls",
      "type": "boolean",
      "description": "Automatically include default remote cloud urls. If this setting is disabled, fallback URLs must be set manually.",
      "title": "Include Cloud URLs",
      "default": true
    }
  },
  "additionalProperties": true
}
